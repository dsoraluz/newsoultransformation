<section id="refer-a-friend">
  <div class="container">
    <div class="row #c8e6c9 green lighten-2">
      <div class="row">
        <div style="padding-top: 25px;" class="col s2 center-align">
          <i class="material-icons center refer-icon">monetization_on</i>
       </div>
        <div class="col s10 left-align refer-text">
          <h1>Pass on the Soul</h1>
          <p>
            Refer a friend and help them transform their finances.
          </p>
          <a data-target="invite-friends-modal" class="waves-effect #7cb342 light-green darken-3 btn-large refer-button"><i class="material-icons right">mode_edit</i>Invite Friends</a>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="profile-info">

  <div class="container">

    <div class="row">
      <div class="col s12 picture-container">
        <div class="picture-info center-align">

          <!-- Profile Picture -->
          <!-- <img  id="landing-image" src="https://unsplash.it/200/300/?random" /> -->
          <div class="row">
            <div class="col s12">

              <span id="hello-text">Hello <%= user.firstName %>!</span>
            </div>

          </div>

          <!-- <a>View Profile</a> -->
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12 account-container center-align">
        <div class="account-info">
          <h2>Current Level: 1</h2>
          <h3>Points: <%= user.points %> </h3>
          <h5>Points left for next level: <span><strong>400</strong></span></h5>
          <a href="/paypal" class="waves-effect #7cb342 light-green darken-3 btn-large refer-button">Make A Payment</a>

        </div>
      </div>
    </div>

  </div>
</section>

<section id="my-team" >
  <div class="container">
    <div class="row">
      <div class="col s12 my-team-container center-align">
        <div class="my-team-info">
          <h3> Team Leader</h3>
          <br />
          <a href="#" class="waves-effect #7cb342 light-green darken-3 btn-large refer-button"> <%= leader.firstName %> <%= leader.lastName %> </a>
          <h3> Teammates </h3>
          <!-- count:3 -->
          <% if (user.descendants.length === 0){ %>
            count: 0
          <% } else { %>
            count: <%= user.descendants.length %>
            <br />
            <% for (let descendant of user.descendants) { %>
              <a href="#" class="waves-effect #7cb342 light-green darken-3 btn-large refer-button"> <%= descendant.firstName %> <%= descendant.lastName %> </a>

            <% } %>
          <% } %>
          <!-- <a href="#" class="waves-effect #7cb342 light-green darken-3 btn-large refer-button">New User B </a>
          <a href="#" class="waves-effect #7cb342 light-green darken-3 btn-large refer-button">New User C </a> -->

        </div>
      </div>
    </div>
  </div>
</section>

<div id="invite-friends-modal" class="modal">
  <a class="right-align modal-action modal-close"><i class="material-icons waves-effect">close</i></a>
  <div class="modal-content">
    <h4 class="center-align">Tell Some Friends</h4>
    <div class="row">
      <form action="/invite/<%= user.id %>" method="post" class="col s12">
        <div class="row">
          <div class="input-field col s3">
            <i class="material-icons prefix">account_circle</i>
            <input id="first_name" type="text" class="validate" name="firstName">
            <label for="first_name">First Name</label>
          </div>
          <div class="input-field col s3">
            <i class="material-icons prefix">account_circle</i>
            <input id="last_name" type="text" class="validate" name="lastName">
            <label for="last_name">Last Name</label>
          </div>
          <div class="input-field col s6">
            <i class="material-icons prefix">mail</i>
            <input id="email" type="email" class="validate" name="email">
            <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">edit</i>
            <textarea id="userMessage" class="materialize-textarea" name="userMessage"></textarea>
            <label for="userMessage">Message</label>
          </div>
        </div>
        <div class="row center-align">
          <button id="invite-button" class="btn waves-effect #7cb342 green lighten-2" type="submit" name="action">Invite
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
