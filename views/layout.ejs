  <!-- MODAL -->

  <div id="login-modal" class="modal">
    <a class="right-align modal-action modal-close"><i class="material-icons">close</i></a>
  <div class="modal-content">
    <h4 class="center-align">Log In</h4>
    <div class="row">
          <div class="row">
            <form action="/login" method="post" class="col s12">
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">account_circle</i>
                  <input id="email" type="email" class="validate" name="username">
                  <label for="email">Email</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">lock</i>
